  <!-- https://mvnrepository.com/artifact/net.masterthought/cucumber-reporting -->
<build>
    <plugins>
     <plugin>
    <groupId>net.masterthought</groupId>
    <artifactId>cucumber-reporting</artifactId>
    <version>5.2.1</version>
     <executions>
    <execution>
	    <id>execution</id>
	    <phase>verify</phase>
	    <goals><goal>generate</goal></goals>
   		 <configuration>
	    <projectName>cucumber-jvm-report</projectName>
	    <outputDirectory>$(project.build.directory)/gou-cucumber-output</outputDirectory>
	    <cucumberOutput>$(project.build.directory)/cucumber-reports</cucumberOutput>
	    <skippedFails>true</skippedFails>
	    <enableFlashCharts>true</enableFlashCharts>
	    <buildNumbr>60</buildNumbr>
   		</configuration>
    </execution>
    </executions>
 </plugin>
 </plugins>
